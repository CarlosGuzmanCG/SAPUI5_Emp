<mvc:View
    controllerName="aa.sapui5.controller.MasterEmployee"
    xmlns:mvc="sap.ui.core.mvc"
    displayBlock="true"
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
>
    <Page
        id="page"
        title="{i18n>title}"
    >
        <content>
            <HBox wrap="Wrap">
                <Label
                    id="labelEmployee"
                    labelFor="inputEmployee"
                    text="{i18n>labelEmployee}"
                    class="sapUiSmallMargin"
                />
                <Input
                    id="inputEmployee"
                    maxLength="10"
                    value="{jsonCountries>/EmployeeId}"
                    width="10rem"
                    class="sapUiSmallMarginEnd"
                />
                <Label
                    id="labelCountry"
                    labelFor="slCountry"
                    text="{i18n>labelCountry}"
                    class="sapUiSmallMargin"
                    visible="true"
                />
                <Select
                    id="slCountry"
                    forceSelection="false"
                    selectedKey="{jsonCountries>/CountryKey}"
                    visible="true"
                    items="{jsonCountries>/ListCountry}"
                >
                    <items>
                        <core:Item
                            key="{jsonCountries>Key}"
                            text="{jsonCountries>Text}"
                        />
                    </items>
                </Select>
                <Button
                    id="btnFilter"
                    class="sapUiSmallMarginEnd"
                    text="{i18n>btnFilter}"
                    icon="sap-icon://search"
                    press="onFilter"
                />
                <Button
                    id="btnClearFilter"
                    class="sapUiSmallMarginEnd"
                    text="{i18n>btnClearFilter}"
                    icon="sap-icon://clear-filter"
                    press="onClearFilter"
                />
            </HBox>
            <core:Fragment
                fragmentName="aa.sapui5.fragment.TableEmployee"
                type="XML"
            />
        </content>
    </Page>
</mvc:View>
