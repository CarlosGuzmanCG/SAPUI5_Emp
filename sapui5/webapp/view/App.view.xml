<mvc:View
    controllerName="aa.sapui5.controller.App"
    xmlns:mvc="sap.ui.core.mvc"
    displayBlock="true"
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
>
    <App id="app">
        <pages>
            <Page
                id="page"
                title="{i18n>title}"
            >
                <content>
                    <HBox>
                        <Label
                            id="labelEmployee"
                            labelFor="inputEmployee"
                            text="{i18n>labelEmployee}"
                            class="sapUiSmallMargin"
                        />
                        <Input
                            id="inputEmployee"
                            maxLength="10"
                            value="{jsonCountries>/EmployeeId}"
                            width="10rem"
                            class="sapUiSmallMarginEnd"
                        />
                        <Label
                            id="labelCountry"
                            labelFor="slCountry"
                            text="{i18n>labelCountry}"
                            class="sapUiSmallMargin"
                            visible="true"
                        />
                        <Select
                            id="slCountry"
                            forceSelection="false"
                            selectedKey="{jsonCountries>/CountryKey}"
                            visible="true"
                            items="{jsonCountries>/ListCountry}"
                        >
                            <items>
                                <core:Item
                                    key="{jsonCountries>Key}"
                                    text="{jsonCountries>Text}"
                                />
                            </items>
                        </Select>

                        <Button
                            id="btnFilter"
                            class="sapUiSmallMarginEnd"
                            text="{i18n>btnFilter}"
                            icon="sap-icon://search"
                            press="onFilter"
                        />

                        <Button
                            id="btnClearFilter"
                            class="sapUiSmallMarginEnd"
                            text="{i18n>btnClearFilter}"
                            icon="sap-icon://clear-filter"
                            press="onClearFilter"
                        />
                    </HBox>

                    <HBox>
                        <Panel>
                            <Button
                                id="btnShowCity"
                                text="{i18n>showCity}"
                                visible="{jsonModelConfig>/visibleBtnShowCity}"
                                press="onShowCity"
                            />

                            <Button
                                id="btnHideCity"
                                text="{i18n>hideCity}"
                                visible="{jsonModelConfig>/visibleBtnHideCity}"
                                press="onHideCity"
                            />

                            <Table id="tableEmployee"
                                   items="{jsonEmployees>/Employees}">

                                <columns>
                                    <Column visible="{jsonModelConfig>/visibleID}">
                                        <header>
                                            <Label text="{i18n>TableId}" />
                                        </header>
                                    </Column>

                                    <Column visible="{jsonModelConfig>/visibleName}">
                                        <header>
                                            <Label text="{i18n>TableName}" />
                                        </header>
                                    </Column>

                                    <Column visible="{jsonModelConfig>/visibleCountry}">
                                        <header>
                                            <Label text="{i18n>TableCountry}" />
                                        </header>
                                    </Column>

                                    <Column visible="{jsonModelConfig>/visibleCity}">
                                        <header>
                                            <Label text="{i18n>TableCity}" />
                                        </header>
                                    </Column>
                                </columns>

                                <items>
                                    <ColumnListItem
                                        type="Active"
                                        press="showOrders"
                                    >
                                        <cells>
                                            <Label
                                                text="{jsonEmployees>EmployeeID}"
                                            />
                                            <Label
                                                text="{jsonEmployees>LastName}"
                                            />
                                            <Label
                                                text="{jsonEmployees>FirstName}"
                                            />
                                            <Label
                                                text="{jsonEmployees>Country}"
                                            />
                                        </cells>
                                    </ColumnListItem>
                                </items>
                            </Table>

                            <HBox id="ordersTable">
                                
                            </HBox>


                        </Panel>
                    </HBox>
                </content>
            </Page>
        </pages>
    </App>
</mvc:View>
