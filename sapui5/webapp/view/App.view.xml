<mvc:View
    controllerName="aa.sapui5.controller.App"
    xmlns:mvc="sap.ui.core.mvc"
    displayBlock="true"
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
>
    <App id="app">
        <pages>
            <Page
                id="page"
                title="{i18n>title}"
            >
                <content>
                    <FlexBox
                        justifyContent="Center"
                        alignItems="Center"
                        height="10vh"
                    >
                        <HBox>
                            <Label
                                id="labelEmployee"
                                labelFor="inputEmployee"
                                text="{i18n>labelEmployee}"
                                class="sapUiSmallMargin"
                            />
                            <Input
                                id="inputEmployee"
                                maxLength="10"
                                width="10rem"
                                class="sapUiSmallMarginEnd"
                                liveChange="onValidate"
                            />
                            <Label
                                id="labelCountry"
                                value="{/employeeId}"
                                labelFor="slCountry"
                                text="{i18n>labelCountry}"
                                class="sapUiSmallMargin"
                                visible="false"
                            />
                            <Select
                                id="slCountry"
                                forceSelection="false"
                                selectedKey="{/countryKey}"
                                visible="false"
                                items="{/listCountry}"
                            >
                            <items>
                                <core:Item key= "{key}" 
                                    text="{text}"/>

                            </items>
                            </Select>
                        </HBox>
                    </FlexBox>
                </content>
            </Page>
        </pages>
    </App>
</mvc:View>
