<mvc:View
    controllerName="aa.sapui5.controller.App"
    xmlns:mvc="sap.ui.core.mvc"
    displayBlock="true"
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
>
    <App id="app">
        <pages>
            <Page
                id="page"
                title="{i18n>title}"
            >
                <content>
                    <FlexBox
                        justifyContent="Center"
                        alignItems="Center"
                        height="10vh"
                    >
                        <HBox>
                            <Label
                                id="labelEmployee"
                                labelFor="inputEmployee"
                                text="{i18n>labelEmployee}"
                                class="sapUiSmallMargin"
                            />
                            <Input
                                id="inputEmployee"
                                maxLength="10"
                                value="{/EmployeeId}"
                                width="10rem"
                                class="sapUiSmallMarginEnd"
                            />
                            <Label
                                id="labelCountry"
                                labelFor="slCountry"
                                text="{i18n>labelCountry}"
                                class="sapUiSmallMargin"
                                visible="true"
                            />
                            <Select
                                id="slCountry"
                                forceSelection="false"
                                selectedKey="{/CountryKey}"
                                visible="true"
                                items="{/ListCountry}"
                            >
                                <items>
                                    <core:Item
                                        key="{Key}"
                                        text="{Text}"
                                    />
                                </items>
                            </Select>

                            <Button id="btnFilter" class="sapUiSmallMarginEnd" text="{i18n>btnFilter}" icon="sap-icon://search"
                                    press="onFilter" />

                            <Button id="btnClearFilter" class="sapUiSmallMarginEnd" text="{i18n>btnClearFilter}" 
                                    icon="sap-icon://clear-filter" press="onClearFilter" />
                                    
                        </HBox>
                    </FlexBox>

                    <FlexBox
                        justifyContent="Center"
                        alignItems="Center"
                        height="30vh"
                    >
                        <HBox>
                            <Panel>
                                <Table
                                    id="tableEmployee"
                                    items="{/Employees}"
                                >
                                    <columns>
                                        <Column>
                                            <header>
                                                <Label text="{i18n>TableId}" />
                                            </header>
                                        </Column>

                                        <Column>
                                            <header>
                                                <Label
                                                    text="{i18n>TableName}"
                                                />
                                            </header>
                                        </Column>

                                        <Column>
                                            <header>
                                                <Label
                                                    text="{i18n>TableCountry}"
                                                />
                                            </header>
                                        </Column>

                                        <Column>
                                            <header>
                                                <Label
                                                    text="{i18n>TableCity}"
                                                />
                                            </header>
                                        </Column>
                                    </columns>

                                    <items>
                                        <ColumnListItem type="Active"  press="showPostalCode">
                                            <cells>
                                                <Label text="{EmployeeID}" />
                                                <Label text="{LastName}" />
                                                <Label text="{FirstName}" />
                                                <Label text="{Country}" />
                                            </cells>
                                        </ColumnListItem>
                                    </items>
                                </Table>
                            </Panel>
                        </HBox>
                    </FlexBox>
                </content>
            </Page>
        </pages>
    </App>
</mvc:View>
