<core:FragmentDefinition
    xmlns:core="sap.ui.core"
    xmlns="sap.m"
>
    <Panel>
        <Button
            id="btnShowCity"
            text="{i18n>showCity}"
            visible="{jsonModelConfig>/visibleBtnShowCity}"
            press="onShowCity"
        />

        <Button
            id="btnHideCity"
            text="{i18n>hideCity}"
            visible="{jsonModelConfig>/visibleBtnHideCity}"
            press="onHideCity"
        />

        <Table
            id="tableEmployee"
            items="{odataNorthwind>/Employees}"
        >
            <columns>
                <Column visible="{jsonModelConfig>/visibleID}">
                    <header>
                        <Label text="{i18n>TableId}" />
                    </header>
                </Column>

                <Column visible="{jsonModelConfig>/visibleName}">
                    <header>
                        <Label text="{i18n>TableName}" />
                    </header>
                </Column>

                <Column visible="{jsonModelConfig>/visibleCountry}">
                    <header>
                        <Label text="{i18n>TableCountry}" />
                    </header>
                </Column>

                <Column visible="{jsonModelConfig>/visibleCity}">
                    <header>
                        <Label text="{i18n>TableCity}" />
                    </header>
                </Column>

                <Column width="100px">
                    <header>
                        <Label text="{i18n>tableShowDetails}" />
                    </header>
                </Column>

            </columns>

            <items>
                <ColumnListItem type="Navigation" press="showEmployee">
                    <cells>
                        <Label text="{odataNorthwind>EmployeeID}" />
                        <Label text="{odataNorthwind>LastName}" />
                        <Label text="{odataNorthwind>FirstName}" />
                        <Label text="{odataNorthwind>Country}" />
                        <core:Icon src="sap-icon://show" press="showOrders"></core:Icon>
                    </cells>
                </ColumnListItem>
            </items>
        </Table>

        <HBox id="ordersTable" />
    </Panel>
</core:FragmentDefinition>
